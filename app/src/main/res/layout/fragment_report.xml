<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarReport"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/darkblue"
        android:elevation="4dp"
        app:title="Laporan Transaksi"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:navigationIconTint="@android:color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvMonthYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laporan Bulan Oktober 2025"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analisis Pengeluaran vs Budget"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Total Pengeluaran Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTotalExpense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/darkblue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Pengeluaran Bulan Ini"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:alpha="0.9"/>

                    <TextView
                        android:id="@+id/tvTotalExpense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 0"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Budget Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’° Budget Bulanan Kamu"
                                android:textSize="14sp"
                                android:textColor="#666666"/>

                            <TextView
                                android:id="@+id/tvBudgetAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Belum diatur"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnSetBudget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Atur Budget"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="per bulan"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Comparison Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvComparison"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kamu masih di jalur yang benar!"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"/>

                    <TextView
                        android:id="@+id/tvComparisonDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Atur budget terlebih dahulu untuk melihat perbandingan"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Recommendation Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rekomendasi"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#F57C00"/>

                    <TextView
                        android:id="@+id/tvRecommendation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Atur budget bulananmu untuk mendapatkan insight dan rekomendasi keuangan yang personal!"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Info Footer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Pantau pengeluaranmu agar tetap sesuai dengan budget"
                android:textSize="11sp"
                android:textColor="#999999"
                android:textStyle="italic"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>